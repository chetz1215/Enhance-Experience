ini_set("rom_name",			"Enhance Experience");
ini_set("rom_version",		"v14.0");
ini_set("rom_author",		"chetan_1215");
ini_set("rom_device",		"Android Devices 6.0+");
ini_set("rom_date",			"30/10/2017");
ini_set("force_colorspace", "rgba");
##

splash(

    2500,
  
    "sample"
);


fontresload( "0", "ttf/DroidSansFallback.ttf;", "12" );
fontresload( "1", "ttf/DroidSansFallback.ttf;", "14" );

theme("material_red");

viewbox(
    "Welcome!",
    "\nYou are about to Install <b>"+
	  ini_get("rom_name")+
	"</b> for <b>"+ini_get("rom_device")+"</b>.\n\n"+
    "<b> Enhance Experience - Enhance your custom ROM experience, bascially removes your LOS apps and replaces them with Google apps with some little extra features. You can select what you want to delete and what to install during installtion.</b>"+
      "  VERSION\t\t: <b><#selectbg_g>"+ini_get("rom_version")+"</#></b>\n"+
      "  UPDATED\t\t: <b><#selectbg_g>"+ini_get("rom_date")+"</#></b>\n\n\n"+
    "Press Next",
    ""
);


agreebox(
  #-- Title
    "Only conditions",
  
  #-- Subtitle / Description
    "Please read it before proceeding futher on installtion",
  
